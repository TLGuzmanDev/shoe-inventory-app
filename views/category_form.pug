extends layout

block content
  .container
    .row.d-flex.justify-content-center
      .col-md-6
        h3.mt-3= title
        hr

        form(method='POST', action='')
          .form-group
            label(for='name') Category name
            input#name.form-control(type='text' name="name" placeholder='Enter category name' value=(category ? category.name: '') required)
          button.btn.btn-primary.btn-block(type='submit') CREATE
        
        if errors
          each error in errors
            .alert.alert-danger.alert-dismissible.fade.show.mt-2= error.msg
              button.close(type="button" data-dismiss="alert" aria-label="Close")
                span(aria-hidden="true") &times;