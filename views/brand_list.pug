extends layout

block content
  h1.display-4.text-center= title
    a.btn.btn-outline-primary.btn-sm.ml-1(href="#") add

  .container
    ul.list-group
      each brand in brands
        li.list-group-item.d-flex.flex-row.justify-content-between.align-items-center.caps
          a.text-dark(href=brand.url) #{brand.name} (est. #{brand.founded_f})
          div
            a.btn.btn-sm.btn-info.mr-1(href="#") Edit
            a.btn.btn-sm.btn-danger(href="#") Delete